{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "cargo",
            "type": "shell",
            "args": [
                "build",
                "--examples=widgets"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run widgets web",
            "command": "cargo",
            "type": "shell",
            "args": [
                "web",
                "start",
                "--target=wasm32-unknown-unknown",
                "--auto-reload",
                "--example",
                "widgets"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}